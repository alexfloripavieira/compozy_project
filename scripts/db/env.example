# Exemplo de configuração do .env para o projeto Compozy
# Copie este arquivo para .env na raiz do projeto e ajuste os valores

# Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - PostgreSQL
# Formato: postgresql://user:password@host:port/database
# Para Docker: use localhost como host
# Para instalação local: use localhost ou 127.0.0.1
DATABASE_URL=postgresql://compozy:compozy_dev_password@localhost:5432/compozy

# Redis
REDIS_URL=redis://127.0.0.1:6379/1

# Celery
CELERY_BROKER_URL=redis://127.0.0.1:6379/1
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1

# AI APIs (opcional - necessário para agents)
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
